{
  "name": "sparkfit_backend",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "prestart": "npx prisma generate --schema=./prisma/schema.prisma && npx prisma migrate dev --name migration",
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "prisma:generate": "cd ../prisma && npm run generate",
    "prisma:migrate": "cd ../prisma && npm run migrate dev --name migration",
    "prisma:studio": "cd ../prisma && npm run studio",
    "prisma:check": "cd ../prisma && npx prisma validate",
    "deps:update": "npm update",
    "deps:audit": "npm audit --production",
    "deps:outdated": "npm outdated",
    "deps:check": "npm run deps:audit && npm run deps:outdated"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.6.7",
    "nodemon": "^3.1.9",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/gitlab": "^12.1.1",
    "@semantic-release/npm": "^11.0.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "prisma": "^6.10.1",
    "semantic-release": "^22.0.12",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
