generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id         Int         @id @default(autoincrement())
  username        String      @unique
  email           String?     @unique
  password        String
  phone           String?     @unique
  profile_picture String?
  user_type       String
  created_at      DateTime    @default(now())
  profile         Profile?
  workouts        Workout[]
  mealPlans       Meal_Plan[]
}

model Profile {
  profile_id   Int     @id @default(autoincrement())
  user_id      Int     @unique
  age          Int?
  weight       Float?
  height       Float?
  intensity    String?
  fitness_goal String?
  goal_detail  String?
  user         User    @relation(fields: [user_id], references: [user_id])
}

model Workout {
  workout_id      Int              @id @default(autoincrement())
  user_id         Int
  name            String?          // Nom de la s√©ance (optionnel)
  date            DateTime
  duration        Int // Duration in minutes
  calories_burned Int
  details         Workout_Detail[]
  user            User             @relation(fields: [user_id], references: [user_id])
}

model Workout_Detail {
  detail_id   Int      @id @default(autoincrement())
  workout_id  Int
  exercise_id Int
  sets        Int
  reps        Int
  weight      Float
  workout     Workout  @relation(fields: [workout_id], references: [workout_id])
  exercise    Exercise @relation(fields: [exercise_id], references: [exercise_id])
}

model Exercise {
  exercise_id Int              @id @default(autoincrement())
  name        String
  description String?
  video_url   String?
  goal_type   String
  details     Workout_Detail[]
  mealPlans   Meal_Plan[]

  @@unique([name, goal_type], name: "name_goal_type")
}

model Meal_Plan {
  meal_plan_id Int                @id @default(autoincrement())
  user_id      Int
  date         DateTime
  meal_type    String
  details      Meal_Plan_Detail[]
  user         User               @relation(fields: [user_id], references: [user_id])
  exercise     Exercise?          @relation(fields: [exercise_id], references: [exercise_id])
  exercise_id  Int?
}

model Meal_Plan_Detail {
  detail_id    Int       @id @default(autoincrement())
  meal_plan_id Int
  recipe_id    Int
  servings     Int
  mealPlan     Meal_Plan @relation(fields: [meal_plan_id], references: [meal_plan_id])
  recipe       Recipe    @relation(fields: [recipe_id], references: [recipe_id])
}

model Recipe {
  recipe_id    Int                @id @default(autoincrement())
  title        String
  prep_time    Int // Time in minutes
  cook_time    Int // Time in minutes
  instructions String
  details      Meal_Plan_Detail[]
}
